.inputsBlock
  flex-grow 1
  padding-top 1u
  z-index 100

.input
  margin-top 1u

.previewBlock
  display none
  +desktop()
    display flex
    flex-grow 1
    margin-top 2u

.img
  width 50u
  height 50u
  justify-content center
  flex-direction row

.previewPush
  background-color white
  height 15u
  width 84%
  margin-top 10u
  padding 2u

.appNameBlock
  line-height 2u
  padding-bottom 1u

.appName
  margin-left 1u
  color $UI.colors.secondaryText

.infoBlock
  flex-grow 1

.title, .body
  line-height 2.5u

.body
  margin-top 1u
